<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/lists/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>List Name</th>
      </tr>
    </thead>
    <tbody>
      <% lists.forEach(list => { %>
        <tr>
          <% if (list.owner.equals(user?.profile._id)) { %>
          <td><%= list.title %></td>
          <td><a href="/lists/<%= list._id %>">See Groceries</a></td>
          <td>
              <form 
              action="/lists/<%= list._id %>?_method=DELETE" 
              method="POST"
              >
              <button id="trash">🗑️</button>
            </form>
            <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>